<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

      <com.vadeworks.kannadafacts.KenBurnsView
         android:id="@+id/ken_burns_images"
         android:layout_width="match_parent"
         android:layout_height="match_parent" />

     <ImageView
         android:id="@+id/imagelogo"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="37dp"
         android:src="@drawable/logo1" />

     <com.vadeworks.kannadafacts.RobotoTextView
         android:id="@+id/welcome_text"
         style="@style/TextViewAppearance.Headline2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/imagelogo"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="10dp"
         android:alpha="0.0"
         android:textSize="20dp"
         android:text="ಸಿರಿಗನ್ನಡಂ ಗೆಲ್ಗೆ, ಸಿರಿಗನ್ನಡಂ ಬಾಳ್ಗೆ"
         android:textColor="#ffffff" />

    <ru.katso.livebutton.LiveButton
        xmlns:livebutton="http://schemas.android.com/apk/res-auto"
        android:layout_height="40dp"
        android:layout_width="200dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="ಕನ್ನಡದಲ್ಲಿ ಓದಿ"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:layout_marginTop="13dp"
        android:fontFamily="quicksand"
        android:textSize="20sp"
        android:id="@+id/readkannada"
        livebutton:corners="4dp"
        livebutton:normalHeight="4dp"
        livebutton:pressedHeight="2dp"
        livebutton:backgroundColor="#8BC34A"
        livebutton:shadowColor="#4CAF50"/>

    <ru.katso.livebutton.LiveButton
        xmlns:livebutton="http://schemas.android.com/apk/res-auto"
        android:layout_height="40dp"
        android:layout_width="200dp"
        android:gravity="center"
        android:text="Read in English"
        android:layout_below="@+id/readkannada"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:fontFamily="sans-serif"
        android:textSize="20sp"
        android:id="@+id/readhistorynow"
        livebutton:corners="4dp"
        livebutton:normalHeight="4dp"
        livebutton:pressedHeight="2dp"
        livebutton:backgroundColor="#3498db"
        livebutton:shadowColor="#2980b9"/>

     <ImageButton
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/share"
         android:src="@drawable/share"
         android:background="@null"
         android:layout_alignParentBottom="true"
         android:layout_centerHorizontal="true"
         android:layout_marginBottom="45dp" />

     <ImageButton
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/giveusfive"
         android:layout_toLeftOf="@+id/share"
         android:layout_marginRight="23dp"
         android:src="@drawable/like"
         android:background="@null"
         android:layout_alignTop="@+id/share"
         android:layout_centerHorizontal="true" />

     <ImageButton
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/contribute"
         android:src="@drawable/rating"
         android:background="@null"
         android:layout_marginLeft="23dp"
        android:layout_toRightOf="@+id/share"
         android:layout_alignTop="@+id/share"
          />


</RelativeLayout>